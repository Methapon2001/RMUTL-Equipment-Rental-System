// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int        @id @default(autoincrement())
  username String
  password String
  role     Role
  detailId Int
  detail   UserDetail @relation(fields: [detailId], references: [id])
  rent     Rent[]
}

enum Type {
  STUDENT
  TEACHER
}

model UserDetail {
  id        Int    @id @default(autoincrement())
  type      Type
  firstname String
  lastname  String
  user      User[]
}

model Equipment {
  id      Int    @id @default(autoincrement())
  name    String
  count   Int
  remain  Int
  broken  Int
  model   String
  brandId Int
  brand   Brand  @relation(fields: [brandId], references: [id])
  rent    Rent[]
}

model Brand {
  id        Int         @id @default(autoincrement())
  name     String
  Equipment Equipment[]
}

model Rent {
  id          Int       @id @default(autoincrement())
  userId      Int
  equipmentId Int
  user        User      @relation(fields: [userId], references: [id])
  equipment   Equipment @relation(fields: [equipmentId], references: [id])
  Return      Return?
}

model Return {
  id     Int  @id @default(autoincrement())
  rentId Int  @unique
  rent   Rent @relation(fields: [rentId], references: [id])
}
