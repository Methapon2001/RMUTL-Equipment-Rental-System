generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Type {
  STUDENT
  TEACHER
}

model User {
  id       Int        @id @default(autoincrement())
  username String
  password String
  type     Type
  detailId Int
  detail   UserDetail @relation(fields: [detailId], references: [id])
  rent     Rent[]
}

model UserDetail {
  id        Int    @id
  firstname String
  lastname  String
  user      User[]
}

model Brand {
  id        Int         @id @default(autoincrement())
  name      String
  equipment Equipment[]
}

model Equipment {
  id      Int    @id @default(autoincrement())
  name    String
  count   Int
  broken  Int
  model   String
  brandId Int
  brand   Brand  @relation(fields: [brandId], references: [id])
  rent    Rent[]
}

model Rent {
  id          Int       @id @default(autoincrement())
  userId      Int
  equipmentId Int
  date        DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  equipment   Equipment @relation(fields: [equipmentId], references: [id])
  return      Return?
}

model Return {
  id     Int      @id @default(autoincrement())
  date   DateTime @default(now())
  rentId Int      @unique
  rent   Rent     @relation(fields: [rentId], references: [id])
}
